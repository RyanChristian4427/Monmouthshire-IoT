{
    "compilerOptions": {
      "module": "commonjs",
      "strict": true,
      "baseUrl": "./",
      "outDir": "build",
      "removeComments": true,
      "experimentalDecorators": true,
      "target": "es6",
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "types": [
        "node", "jest" 
      ],
      "typeRoots": [
        "node_modules/@types", "./types"
      ]
    },
    "include": [
      "./src/**/*", "src/app.tsx"
    ],
    "exclude": [
      "./src/public/", "**/*.spec.ts", "**/*.test.ts"
    ]
}