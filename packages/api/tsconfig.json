{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "paths": {
            "src/*": [
                "src/*"
            ],
            "test/*": [
                "test/*"
            ],
            "@core/*": [
                "../core/*/src"
            ]
        },
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
        "src/**/*"
    ]
}
