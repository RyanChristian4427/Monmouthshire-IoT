{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src/",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "jsxFactory": "h",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "paths": {
            "@core/*": [
                "../../../core/*/src"
            ]
        },
        "sourceMap": true,
        "target": "ES6"
    },
    "include": [
        "src/**/*"
    ]
}
