{
  "name": "root",
  "private": true,
  "scripts": {
    "serve:public": "lerna run serve:dev --scope '{api-v1,web-public}'",
    "serve:private": "lerna run serve:dev --scope web-private",
    "serve:all": "lerna run serve:dev",
    "test": "lerna exec -- npm run test",
    "migration:up": "lerna run migration -- up",
    "lint": "eslint --cache 'packages/**/src/**/*.{js,ts,tsx}' --fix",
    "prettier": "prettier 'packages/**/src/**/*.{css,scss,json}' --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss,json}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1"
  },
  "workspaces": [
    "packages/**"
  ]
}
